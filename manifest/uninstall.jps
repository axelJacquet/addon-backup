type: update
name: Add-on backup

targetNodes:

  nodeGroup: '*'

onUninstall:
        cmd [${settings.node}]:
  
        - rm -rf /usr/bin/restic /usr/bin/jq /home/.config/ /var/log/restic.log /root/purge.sh /root/user-recovery.sh   /home/plan.json
        - crontab -u root -l | grep -v '/run/user/restic.lock'  | crontab -u root -
    
        user: root
